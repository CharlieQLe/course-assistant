{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error", 
            "tab"
        ],
        "no-tabs": 0,
        "linebreak-style": [
            "error", 
            "unix"],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ], 
        "consistent-return": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "curly": [
            "warn",
            "all"
        ],
        "prefer-const": [
            "warn",
            {}
        ]
    }
}
